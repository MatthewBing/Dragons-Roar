<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainwallpaper"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cuaccessibility.dragons_roar.MainMenuMainActivity"
    tools:showIn="@layout/mainmenu_activity_main">

    <Button
        android:id="@+id/newChar"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="210sp"
        android:layout_height="65sp"
        android:background="@android:color/holo_red_dark"
        android:text="New Character"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_margin="50dp"
        android:contentDescription="@string/newChar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voiceCommand" />

    <Button
        android:id="@+id/voiceCommand"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="210sp"
        android:layout_height="65sp"
        android:background="@android:color/holo_red_dark"
        android:text="Voice Command"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_margin="50dp"
        android:onClick="sendMessage"
        android:contentDescription="@string/voiceCommand"
        app:layout_constraintTop_toBottomOf="@+id/continueButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:elegantTextHeight="false"
        android:text="Dragon's Roar"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="50sp"
        android:typeface="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/continueButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="210sp"
        android:layout_height="65sp"
        android:background="@android:color/holo_red_dark"
        android:text="Continue"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_margin="50dp"
        android:onClick="sendMessage"
        android:contentDescription="@string/continueButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

</android.support.constraint.ConstraintLayout>
